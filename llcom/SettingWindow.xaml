<Window x:Class="llcom.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:llcom"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="更多串口设置" Height="350" Width="400"
        Loaded="Window_Loaded">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <TabControl>
            <TabItem Header="串口基本设置">
                <StackPanel Margin="10,5,0,0" >
                    <CheckBox Content="自动恢复被断开的串口连接" Margin="5"/>
                    <CheckBox Content="自动保存串口收发日志" Margin="5"/>
                    <CheckBox Content="窗口保持置顶显示" Margin="5"/>
                    <WrapPanel Margin="5">
                        <TextBlock Text="分包数据超时时间：" VerticalAlignment="Center"/>
                        <TextBox Text="10"/>
                        <TextBlock Text="秒" VerticalAlignment="Center" Margin="3,0"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="数据位长度：" VerticalAlignment="Center"/>
                        <ComboBox>
                            <ComboBoxItem Content="5" IsSelected="True"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                        </ComboBox>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="停止位：" VerticalAlignment="Center"/>
                        <ComboBox>
                            <ComboBoxItem Content="1" IsSelected="True"/>
                            <ComboBoxItem Content="1.5"/>
                            <ComboBoxItem Content="2"/>
                        </ComboBox>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="校验位：" VerticalAlignment="Center"/>
                        <ComboBox>
                            <ComboBoxItem Content="无校验" IsSelected="True"/>
                            <ComboBoxItem Content="奇校验"/>
                            <ComboBoxItem Content="偶校验"/>
                        </ComboBox>
                    </WrapPanel>
                </StackPanel>
            </TabItem>


            <TabItem Header="对发送数据处理的lua脚本">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <ComboBox Width="100">
                            <ComboBoxItem Content="末尾加\r\n" IsSelected="True"/>
                            <ComboBoxItem Content="发送16进制"/>
                            <ComboBoxItem Content="gps命令包"/>
                        </ComboBox>
                        <Button Margin="3,0,0,0" ToolTip="新建脚本">
                            <Grid>
                                <fa:FontAwesome Icon="File" Foreground="LightSkyBlue"/>
                                <fa:FontAwesome Icon="FileCodeOutline"/>
                            </Grid>
                        </Button>
                        <Button Margin="3,0,0,0" ToolTip="保存代码">
                            <fa:FontAwesome Icon="FloppyOutline"/>
                        </Button>
                        <Button Margin="3,0,0,0" ToolTip="测试脚本">
                            <fa:FontAwesome Icon="Play" Foreground="DarkGreen"/>
                        </Button>
                        <Button Margin="3,0,0,0" ToolTip="打开脚本与日志目录">
                            <Grid>
                                <fa:FontAwesome Icon="FolderOpen" Foreground="Yellow"/>
                                <fa:FontAwesome Icon="FolderOutlinepenOutline"/>
                            </Grid>
                        </Button>
                        <Button Margin="3,0,0,0" ToolTip="查看接口文档">
                            <fa:FontAwesome Icon="Book" Foreground="DarkSlateGray"/>
                        </Button>
                    </WrapPanel>
                    <avalonEdit:TextEditor
                        Grid.Row="1"
                        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                        Name="textEditor"
                        FontFamily="Consolas"
                        FontSize="10pt"
                        ShowLineNumbers="True"
                        Text="return uartData..'\r\n'--结尾加上回车换行"/>
                    <WrapPanel Grid.Row="2" Margin="5">
                        <TextBlock Text="传入数据为uartData，传出数据为你脚本return的结果。" TextWrapping="Wrap"/>
                        <TextBlock Text="此处脚本对快捷发送区也生效，对脚本输出数据无效。" TextWrapping="Wrap"/>
                        <TextBlock Text="查看接口文档，可点击主界面接口文档按钮。" TextWrapping="Wrap"/>
                    </WrapPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
