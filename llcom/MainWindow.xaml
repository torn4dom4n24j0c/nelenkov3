<Window x:Class="llcom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:llcom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <ComboBox Width="100">
                    <ComboBoxItem>COM1</ComboBoxItem>
                    <ComboBoxItem>COM2</ComboBoxItem>
                    <ComboBoxItem>COM3</ComboBoxItem>
                </ComboBox>
                <Button Name="openSerialButton" Content="打开串口" Height="30" Width="100" Margin="0,5,0,0" FontSize="17"/>
            </WrapPanel>
            <Grid Margin="5" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="波特率：" FontSize="17" VerticalAlignment="Center"/>
                <ComboBox Width="70" Grid.Column="1">
                    <ComboBoxItem>115200</ComboBoxItem>
                    <ComboBoxItem>921600</ComboBoxItem>
                    <ComboBoxItem>9600</ComboBoxItem>
                </ComboBox>
                <TextBlock Grid.Column="0" Grid.Row="1"/>
                <Button Grid.Row="1" Grid.Column="1" Content="更多设置" Height="30" Margin="0,5,0,0" FontSize="15"/>
            </Grid>
            <TextBox Grid.Column="2" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="55">
                abcdefg
            </TextBox>
            <Button Grid.Column="3" Content="发送" Width="50" FontSize="17" Margin="5"/>
        </Grid>
    </Grid>
</Window>
